<div class="mx-auto max-w-7xl sm:px-6 lg:px-8 py-12">
  <div class="mx-auto max-w-4xl">

    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% @boards.each do |board| %>
        <div class="flex w-full flex-col rounded-xl bg-white p-4 shadow-lg">
          <div class="flex items-start">
            <div class="flex h-12 w-12 items-center justify-center rounded-full border border-blue-100 bg-blue-50">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
              </svg>
            </div>

            <div class="ml-4">
              <h2 class="font-semibold"><%= board.name %></h2>
              <p class="mt-1 text-xs text-gray-500">Last update <%= board.updated_at.strftime("%d/%m/%y - %H:%M") %></p>
            </div>

          </div>
          <div class="mt-3 flex divide-x divide-gray-200">

            <%= link_to edit_board_path(board), class: "flex w-0 justify-center flex-1 cursor-pointer" do%>
              <span class="text-sm">Edit</span>
            <% end %>
            <%= link_to board_path(board), data: { "turbo-method": :delete }, class: "flex w-0 justify-center flex-1 cursor-pointer" do %>
              <span class="text-red-700 text-sm">Delete</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
